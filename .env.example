FLASK_DEBUG=1
# Default admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
# Optional: set a specific domain for the session cookie when using different hosts
# SESSION_COOKIE_DOMAIN=example.com
